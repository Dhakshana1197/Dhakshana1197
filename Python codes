 #iterative statements

mind =43
guess=0
while guess!=mind:
    guess=int(input("enter the number"))
    if mind==guess:
        print("wow super")
    elif guess>mind:
        print("too high")
    else:
        print("too little")

op==>enter the number50
too high
enter the number32
too little
enter the number43
wow super


# Print 1 5 times

count=0
while count<5:
    print(1)
    count=count+1



# multiplicaton of 3

count=3
while count<=100:
    print(count,end=" ")
    count=count+3
    
o/p==> 3 6 9 12 15 18 21 24 27 30 33 36 39 42 45 48 51 54 57 60 63 66 69 72 75 78 81 84 87 90 93 96 99 
   
 #addition of first 100 numbers:
 
amount=1
box=0
noofdays=100
while amount<=noofdays:
    box=box+amount
    amount=amount+1
    
print(box)


# to print vowels
name=input("enter the name")
length=len(name)
i=0
while i<length:
    if name[i] in ["a","e","i","o","u"]:
        print(name[i])
    i=i+1


#common multiples
no1=int(input("enter the first number"))
no2=int(input("enter the second number"))
big =no1 if no1>no2 else no2
while True:
    if big%no1==0 and big%no2==0:
        print("lease common multiplicatin",big)
        break
    big=big+1

#prime number
#not divisibl by any number
no=int(input("enter the number"))
div=2
while no>div:
    if no%div==0:
        print("this is not prime number")
        break
    div=div+1
else:
    print("this is prime number")


#reverse of number matching
no=input("enter the number ")
reverse=""
#print(reverse)
i=len(no)-1
while i>=0:
    reverse=reverse+no[i]
    i-=1

print(reverse)
if no==reverse:
    print("the number is palindrome")
else:
    print("this is not palindraome")


#fibnocci series
f=0
s=1
count=1
while count<=5:
    t=f+s
    print(t)
    f=s
    s=t
    count+=1
